<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="drawController" class="com.ips.bmps.module.setmain.draw.web.DrawController"
		parent="baseController">
		<property name="drawService" ref="drawService" />
		<property name="drawFileService" ref="drawFileService" />
		<property name="drawFileTemplate" ref="drawFileTemplate" />
	</bean>

	<bean id="drawQueryController"
		class="com.ips.bmps.module.setmain.draw.web.DrawQueryController"
		parent="baseController">
		<property name="drawService" ref="drawService" />
		<property name="drawFileService" ref="drawFileService" />
	</bean>
	
	   <!-- velocity 配置-->
    <bean id="VelocityEngine" class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
        <property name="resourceLoaderPath">
            <value>${offline.path}</value>
        </property>
        <property name="velocityProperties">
            <props>
                <prop key="resource.loader">class</prop>
                <prop key="class.resource.loader.class">
                    org.apache.velocity.runtime.resource.loader.ClasspathResourceLoader
                </prop>
                <prop key="input.encoding">UTF-8</prop>
                <prop key="output.encoding">UTF-8</prop>
                <prop key="default.contentType">text/html; charset=UTF-8</prop>
                <prop key="runtime.references.strict">true</prop>
            </props>
        </property>
    </bean>
</beans>